<fieldset class="add-ln-form">
  <div class="col-xs-2 col-xs-offset-1">
    <%= f.autocomplete_field :ingredient_name, autocomplete_ingredient_name_recipes_path, class: 'form-control input-sm' %>
  </div>
  <div class="col-xs-1">
    <%= f.text_field :quantity, placeholder: "0", class: 'form-control input-sm' %>
  </div>
  <div class="col-xs-1">
    <%= f.text_field :measurement, placeholder: "cup", class: 'form-control input-sm' %>
  </div>
  <div class="col-xs-4">
    <%= f.text_field :directions, placeholder: "chopped", class: 'form-control input-sm' %>
  </div>
  <div class="col-xs-1">
    <%= f.hidden_field :_destroy %>
    <%= link_to "Remove", '#', class: "remove_fields btn btn-danger btn-sm pull-right-btn" %>
  </div>
</fieldset>
