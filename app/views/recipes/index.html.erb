<h1><%= pluralize(@recipes.size, 'Recipe') %></h1>

<div class="row">
  <div class="col-md-8">
    <%= link_to "New Recipe", new_recipe_path, class: 'btn btn-success' %>
  </div>
</div>

<hr />

<div class="row">
  <div class="col-md-8">
    <% @recipes.each do |recipe| %>
      <div class="media">
        <div class="media-body">
          <h3 class="media-heading">
            <%= link_to recipe.name, recipe %>
          </h3>
          <p>
            <%= truncate(recipe.description, length: 50) %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
