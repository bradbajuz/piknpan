<h1><%= pluralize(@recipes.size, 'Recipe') %></h1>

<div class="row">
  <div class="col-md-8">
    <%= link_to "New Recipe", new_recipe_path, class: 'btn btn-success' %>
  </div>
</div>

<hr />

<table class="table table-striped table-condensed">
<thead>
  <tr>
    <th colspan="1">Name</th>
    <th colspan="1">Description</th>
    <th colspan="1"></th>
    <th colspan="1"></th>
  </tr>
</thead>
<tbody id='recipe'>
  <%= render partial: 'recipe', collection: @recipes %>
</tbody>
</table>
