<div class="form-horizontal" role="form">
  <%= form_for recipe do |f| %>
    <div class="form-group">
      <%= f.label :name, class: 'col-sm-2 control-label' %>
      <div class="col-sm-4">
        <span class="has-popover" data-toggle="popover" title="Example" data-content="Recipe name" (popover)>
          <%= f.text_field :name, class: 'form-control input-sm' %>
        </span>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, class: 'col-sm-2 control-label' %>
      <div class="col-sm-8">
        <span class="has-popover" data-toggle="popover" title="Example" data-content="Tasty vegan strawberry ice cream for the whole family" (popover)>
          <%= f.text_area :description, rows: 2, class: 'form-control input-sm' %>
        </span>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :Ingredients, class: 'col-sm-2 control-label' %>
    </div>
    <div class="add-ln-form">
      <%= f.fields_for :ingredient_lines do |builder| %>
        <%= render 'ingredient_line_fields', f: builder %>
      <% end %>
    </div>
    <div class="add-ln-form">
      <%= link_to_add_fields '<div class="btn btn-primary btn-sm pull-add-btn">Add</div>'.html_safe, f, :ingredient_lines %>
    </div>

    <div class="form-group">
      <%= f.label :Directions, class: 'col-sm-2 control-label' %>
    </div>
    <div class="add-ln-form">
      <%= f.fields_for :directions do |builder| %>
        <%= render 'direction_fields', f: builder %>
      <% end %>
    </div>
    <div class="add-ln-form">
      <%= link_to_add_fields '<div class="btn btn-primary btn-sm pull-add-btn">Add</div>'.html_safe, f, :directions %>
    </div>
  </div>

    <div class="form-group col-xs-2">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>  
  <% end %>
</div>

