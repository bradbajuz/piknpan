<div class="form-horizontal" role="form">
  <%= form_for item_in_pantry do |f| %>
    <div class="form-group">
      <%= f.label :Ingredient, class: 'col-sm-2 control-label' %>
      <div class="form-group">
        <div class="col-sm-2">
          <span class="has-popover" data-toggle="popover" data-content="Choose ingredient" (popover)>
            <%= f.autocomplete_field :ingredient_name, autocomplete_ingredient_name_item_in_pantries_path, class: 'form-control' %>
          </span>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :quantity, class: 'col-sm-2 control-label' %>
      <div class="col-sm-4">
        <span class="has-popover" data-toggle="popover" title="Example" data-content="10" (popover)>
          <%= f.text_field :quantity, class: 'form-control' %>
        </span>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :min_quantity, class: 'col-sm-2 control-label' %>
      <div class="col-sm-8">
        <span class="has-popover" data-toggle="popover" title="Example" data-content="1" (popover)>
          <%= f.text_field :min_quantity, class: 'form-control' %>
        </span>
      </div>
      <p>Optional</p>
    </div>

    <div class="form-group">
      <%= f.label :measurement, class: 'col-sm-2 control-label' %>
      <div class="col-sm-8">
        <span class="has-popover" data-toggle="popover" title="Example" data-content="cup/t/T" (popover)>
          <%= f.text_field :measurement, class: 'form-control' %>
        </span>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :location, class: 'col-sm-2 control-label' %>
      <div class="col-sm-8">
        <span class="has-popover" data-toggle="popover" title="Example" data-content="fridge" (popover)>
          <%= f.text_field :location, class: 'form-control' %>
        </span>
      </div>
      <p>Optional</p>
    </div>
    
    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>  
  <% end %>
</div>

