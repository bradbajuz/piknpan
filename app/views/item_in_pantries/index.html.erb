<h1>My Pantry</h1>

<div class="row">
  <div class="col-md-8">
    <%= link_to "New Pantry Item", new_item_in_pantry_path, class: 'btn btn-success' %>
  </div>
</div>

<hr />

<div class="row">
  <div class="col-md-8">
    <% @item_in_pantries.each do |item| %>
      <div class="media">
        <div class="media-body"
          <h4 class="media-heading">
            <%= link_to item.location, item %>
          </h4>
          <p>
            <%= item.ingredient.name %>
          </p>
      </div>
    <% end %>
  </div>
</div>