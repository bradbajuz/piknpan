<h1>My Pantry</h1>

<div class="row">
  <div class="col-md-8">
    <%= link_to "New Pantry Item", new_item_in_pantry_path, class: 'btn btn-success' %>
  </div>
</div>

<hr />

<table class="table table-striped table-condensed">
<thead>
  <tr>
    <th colspan="1">Ingredient</th>
    <th colspan="1">Quantity</th>
    <th colspan="1">Measurement</th>
    <th colspan="1">Location</th>
    <th colspan="1"></th>
    <th colspan="1"></th>
  </tr>
</thead>
<tbody id='item_in_pantry'>
  <%= render partial: 'item_in_pantry', collection: @item_in_pantries %>
</tbody>
</table>